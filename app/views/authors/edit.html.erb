<h2>Edit "<%= @author.name %>"</h2>

<%= form_tag author_path(@author), method: "patch" do %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@author.errors.count, "error") %>
      Prohibited this author from being edited:
      <ul>

        <% @author.errors.full_messages.each do |msg| %>
          <div class="field_with_errors">
            <li><%= msg %></li>
          </div>
        <% end %>

      </ul>
    </div>
  <% end %>

  <% if @author.errors[:name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <% if @author.errors[:email].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "email", "Email" %>
      <p>Must be "Fiction" or "Non-Fiction".</p>
    <%= text_field_tag "email", @author.email %>
  </div>

  <% if @author.errors[:phone_number].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "phone_number", "Phone number" %>
    <%= text_area_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Update" %>
<% end %>