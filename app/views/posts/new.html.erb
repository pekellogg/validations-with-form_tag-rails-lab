<h2>Create a Post</h2>

<%= form_tag posts_path, method: "post" do %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@post.errors.count, "error") %>
      prohibited this post from being saved:
      <ul>

        <% @post.errors.full_messages.each do |msg| %>
          <div class="field_with_errors">
            <li><%= msg %></li>
          </div>
        <% end %>
        
      </ul>
    </div>
  <% end %>

  <% if @post.errors[:title].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "title", "Title" %><br>
      <%= text_field_tag "title", @post.title %><br><br>
    </div>

  <% if @post.errors[:category].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "category", "Category" %><br>
      <%= text_field_tag "category", @post.category %><br><br>
    </div>

  <% if @post.errors[:content].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "content", "Content" %><br>
      <%= text_field_tag "content", @post.content %><br><br>
    </div>

  <%= submit_tag "Create" %>
<% end %>