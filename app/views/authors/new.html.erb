<h2>Create an Author</h2>

<%= form_tag authors_path, method: "post" do %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@author.errors.count, "error") %>
      Prohibited this author from being saved:
      <ul>

        <% @author.errors.full_messages.each do |msg| %>
          <div class="field_with_errors">
            <li><%= msg %></li>
          </div>
        <% end %>
        
      </ul>
    </div>
  <% end %>

  <% if @author.errors[:name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "name", "Name" %><br>
      <%= text_field_tag "name", @author.name %><br><br>
    </div>

  <% if @author.errors[:email].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "email", "Email" %><br>
      <%= text_field_tag "email", @author.email %><br><br>
    </div>

  <% if @author.errors[:phone_number].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "phone_number", "Phone Number" %><br>
      <%= text_field_tag "phone_number", @author.phone_number %><br><br>
    </div>

  <%= submit_tag "Create" %>
<% end %>