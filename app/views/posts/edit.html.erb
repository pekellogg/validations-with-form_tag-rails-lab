<h2>Edit "<%= @post.title %>"</h2>

<%= form_tag post_path(@post), method: "patch" do %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@post.errors.count, "error") %>
      Prohibited this post from being edited:
      <ul>

        <% @post.errors.full_messages.each do |msg| %>
          <div class="field_with_errors">
            <li><%= msg %></li>
          </div>
        <% end %>

      </ul>
    </div>
  <% end %>

  <% if @post.errors[:title].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "title", "Title" %><br>
    <%= text_field_tag "title", @post.title %><br><br>
  </div>

  <% if @post.errors[:category].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "category", "Category" %><br>
      <p>Must be "Fiction" or "Non-Fiction"</p>
    <%= text_field_tag "category", @post.category %><br><br>
  </div>

  <% if @post.errors[:content].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "content", "Content" %><br>
    <%= text_area_tag "content", @post.content %><br><br>
  </div>

  <%= submit_tag "Update" %>
<% end %>

